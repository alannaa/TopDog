<!--        android:textAlignment="center"-->
<!--        android:textSize="18sp"-->
<!--        tools:layout_editor_absoluteX="197dp"-->
<!--        tools:layout_editor_absoluteY="218dp" />-->

    <ImageButton
        android:id="@+id/leaderboard_btn"
        android:layout_width="181dp"
        android:layout_height="182dp"
        android:contentDescription="@string/profile_picture_button_that_leads_to_profile"
        android:scaleType="fitCenter"
        app:layout_constraintBottom_toTopOf="@+id/guideline10"
        app:layout_constraintEnd_toStartOf="@id/letsWalk_btn"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/guideline7"
        app:srcCompat="@drawable/leaderboard" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.19" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.5" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline10"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.81" />

    <Button
        android:id="@+id/gpsTestingButton"
        android:layout_width="160dp"
        android:layout_height="74dp"
        android:text="gpsTestIngButton"
        app:layout_constraintTop_toBottomOf="@id/guideline10"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <ImageButton
        android:id="@+id/letsWalk_btn"
        android:layout_width="187dp"
        android:layout_height="184dp"
        android:scaleType="fitCenter"
        app:layout_constraintBottom_toTopOf="@+id/guideline10"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.555"
        app:layout_constraintStart_toEndOf="@id/leaderboard_btn"
        app:layout_constraintTop_toBottomOf="@id/guideline7"
        app:layout_constraintVertical_bias="0.547"
        app:srcCompat="@drawable/screen_shot_2021_08_08_at_7_34_51_pm" />


</androidx.constraintlayout.widget.ConstraintLayout>