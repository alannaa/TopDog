<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <TextView
        android:id="@+id/welcome_msg"
        android:layout_width="386dp"
        android:layout_height="41dp"
        android:text="@string/welcome_msg"
        android:textAlignment="center"
        android:textSize="30sp"
        app:layout_constraintBottom_toTopOf="@+id/guideline6"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <ImageButton
        android:id="@+id/myProfile_btn"
        android:layout_width="181dp"
        android:layout_height="182dp"
        android:contentDescription="@string/profile_picture_button_that_leads_to_profile"
        android:scaleType="fitCenter"
        app:layout_constraintBottom_toTopOf="@+id/guideline7"
        app:layout_constraintEnd_toStartOf="@id/myStats_btn"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/guideline6"
        app:srcCompat="@drawable/untitled_1"
        tools:layout_editor_absoluteX="11dp"
        tools:layout_editor_absoluteY="175dp" />

    <ImageButton
        android:id="@+id/myStats_btn"
        android:layout_width="188dp"
        android:layout_height="180dp"
        android:contentDescription="@string/button_to_stats_page"
        android:scaleType="fitCenter"
        app:layout_constraintBottom_toTopOf="@+id/guideline7"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/myProfile_btn"
        app:layout_constraintTop_toBottomOf="@+id/guideline6"
        app:srcCompat="@drawable/stats"
        tools:layout_editor_absoluteX="207dp"
        tools:layout_editor_absoluteY="175dp" />


    <!--    <Button-->
<!--        android:id="@+id/letsWalkRED_btn"-->
<!--        android:layout_width="186dp"-->
<!--        android:layout_height="178dp"-->
<!--        android:backgroundTint="#db402c"-->
